{
  "extends": "expo/tsconfig.base",
  "include": ["App.tsx", "app", "*.js"],
  "compilerOptions": {
    "typeRoots": ["./app/types"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./app/*"],
    }
  },
}
